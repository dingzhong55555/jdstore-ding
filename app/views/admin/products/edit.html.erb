<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <% if @product.image.present? %>
   <%= image_tag(@product.image.thumb.url, :class => "thumbnail") %>
  <% else %>
   <p>没有相关图片</p>
  <% end %>

  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
